{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["./**/dist/**", "./**/pnpm-lock.yaml", "./src/routeTree.gen.ts"]
  },
  "formatter": {
    "ignore": ["./**/dist/**", "./vscode/**", "./**/.pnpm-store/**", "./**/pnpm-lock.yaml"],
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "indentStyle": "tab"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "overrides": [
    {
      "include": ["*.{css,html}"],
      "formatter": {
        "indentStyle": "tab"
      }
    }
  ]
}

{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["./**/dist/**"]
  },
  "formatter": {
    "ignore": ["./**/dist/**", "./vscode/**", "./**/.pnpm-store/**", "./**/pnpm-lock.yaml"],
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "indentStyle": "tab"
    }
  },
  "overrides": [
    {
      "include": ["*.{css,html}"],
      "formatter": {
        "indentStyle": "tab"
      }
    }
  ],
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  }
}

{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"files": {
		"ignore": ["./**/dist/**", "./**/pnpm-lock.yaml", "./src/routeTree.gen.ts"]
	},
	"formatter": {
		"ignore": ["./**/dist/**", "./vscode/**", "./**/.pnpm-store/**", "./**/pnpm-lock.yaml"],
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all"
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
